<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tituloOutput"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Meu Título"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descricaoOutput"
        android:layout_below="@id/tituloOutput"
        android:textColor="#393939"
        tools:text="Minha descrição"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horaOutput"
        android:layout_below="@id/descricaoOutput"
        android:textSize="12dp"
        android:gravity="end"
        android:textColor="#858484"
        tools:text="May 31 2023 "/>


</RelativeLayout>
